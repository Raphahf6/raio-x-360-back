{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,  // <-- DICA: Mude para false se quiser ignorar erros de 'any' temporariamente
    "esModuleInterop": true,
    "skipLibCheck": true,    // <-- ESSENCIAL: Ignora erros dentro dos node_modules
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}